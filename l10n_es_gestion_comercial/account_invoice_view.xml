<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		
        <!-- Invoice tree -->
    	<record id="invoice_tree_show_check_received" model="ir.ui.view">
            <field name="name">account.invoice.tree.check.received</field>
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="residual" position="replace">
                 	<!-- We remove this field here to move the column to another position -->
                </field>
                <field name="state" position="before">
<!--                 	<field name="received_check" string="Check received" attrs="{'invisible': True}" context="{'active_id': active_id}"/> -->
                    <field name="residual" sum="Residual Amount"/>
                	<field name="received_check_dummy" string="Check received"/>
                </field>
            </field>
        </record>
        
        <!-- Invoice form -->
        <record id="invoice_form_show_check_received" model="ir.ui.view">
            <field name="name">account.invoice.form.check.received</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                	<field name="address_invoice_id" position="after">
<!-- 	                	<field name="received_check" string="Check received" attrs="{'invisible': False}" context="{'active_id': active_id}"/> -->
	                	<field name="received_check_dummy" string="Check received" attrs="{'readonly': True}"/>
                        <newline/>
                    </field>
                </data>
            </field>
        </record>
        
        
        
        <record id="view_move_line_form_check_received" model="ir.ui.view">
            <field name="name">account.move.line.form.check.received</field>
            <field name="model">account.move.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <data>
                	<field name="period_id" position="after">
                        <newline/>
	                	<field name="received_check" string="Check received" attrs="{'invisible': False}" context="{'active_id': active_id}"/>
                        <newline/>
                    </field>
                </data>
            </field>
        </record>
        
        
    
    </data>
</openerp>